<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="header">
            <h1> Eat a burger! </h1>
        </div>
        <div class="col-md-6 text-center">
            <div class="row">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="col-md-9 burger-display">
                    {{this.id}}. {{this.burger_name}}
                </div>
                <div class="col-md-3 text-center">
                    <button type="button" class="btn btn-default devour" data-id="{{this.id}}">Eat me!</button>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center">
            {{#each burgers}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="form-section">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerInput">Burger:</label>
                    <input type="text" id="burgerInput" name="name">
                </div>
                <button type="submit" class="btn btn-default">Add Burger</button>
            </form>
        </div>
    </div>
</div>